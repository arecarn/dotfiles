[core]
    editor = vim
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    d = diff --color
    dc = diff --color --cached
    dt = difftool
    dtc = difftool --cached

    b = branch
    c = commit
    co = checkout
    s = status
    ri = rebase -i

    ls = !git --no-pager log --pretty=tformat:'%C(yellow)%h%Creset %Cred%ad%Creset %an %ae%Cgreen%d %Creset%s' --date=short --max-count=20 --graph
    l = !git log --color -p

    update = add -u
    up = add -u

    exists = ls-files --error-unmatch
[push]
    default = simple
[user]
    name = Ryan Carney
    email = arecarn@gmail.com
[include]
    path = ~/.gitconfig_local
[merge]
    conflictstyle = diff3
    tool = vimdiff
[mergetool]
    prompt = false

[core]
    excludesfile = ~/.gitignore_global
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    d = diff --color
    dc = diff --color --cached

    dt = difftool
    dtc = difftool --cached

    m = merge
    mt = mergetool

    b = branch
    bud = push origin --delete # branch upstream delete
    buc = push origin --set-upstream HEAD # branch upstream create

    cm = commit
    co = checkout
    s  = status
    f = fetch

    a = add
    at = add -u :/ #add tracked

    rs = reset
    rsh = reset HEAD

    rb = rebase
    rbi = rebase --interactive
    rbc = rebase --continue
    rbc = rebase --abort

    rl = !git --no-pager reflog --max-count=20

    l = !git --no-pager log --pretty=tformat:'%><(9)%C(yellow)%h%Creset %Cgreen%ad%Creset %><(15,trunc)%Cblue%an%Creset %s%C(yellow)%d%Creset' --date=short --max-count=10
    ll = !git log --color #long log

    rmso = remote show origin

    bk = tag MY_BACKUP # backup tag
    bkco = checkout MY_BACKUP
    bkd = tag -d MY_BACKUP # delete backup tag

    smup = submodule update
    smupr = submodule update --remote

    exists = ls-files --error-unmatch # does a exist?
[push]
    default = simple
[user]
    name = Ryan Carney
    email = arecarn@gmail.com
[include]
    path = ~/.gitconfig_local
[merge]
    conflictstyle = diff3
    tool = vimdiff
[mergetool]
    prompt = false

#!/bin/sh

# this provides compatibility with git version < 2.0)
cd_to_top_level_of_git_dir(){
    GIT_TOP="${GIT_DIR%%/.git/modules/*}"

    if [ ".$GIT_TOP" != ".$GIT_DIR" ]
    then
        cd "$GIT_TOP" || exit
    fi
    pwd
}

if [ $# = 1 ] && [ "$1" = '--all' ]
then
    cd_to_top_level_of_git_dir
    git add "$@"
elif [ $# -gt 0 ]
then
    git add "$@"
else
    cd_to_top_level_of_git_dir
    git add --update :/
fi

[core]
	editor = vim
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	d = diff --color
	dt = difftool
    c = commit
    co = checkout
    s = status
    ls = !git --no-pager log --pretty=tformat:'%C(yellow)%h %Cred%ad%Creset %an%Cgreen%d %Creset%s' --date=short
    l = !git --no-pager log --color -p


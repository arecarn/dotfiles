[core]
	editor = vim
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	d = diff --color
	dt = difftool
    c = commit
    co = checkout
    s = status
    ls = !git --no-pager log --pretty=tformat:'%C(yellow)%h %Cred%ad%Creset %an%Cgreen%d %Creset%s' --date=short --max-count=20
    l = !git --no-pager log --color -p
    exists = ls-files --error-unmatch

[push]
	default = simple
